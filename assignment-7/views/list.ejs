<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Todo List</title>
  <link rel="stylesheet" href="/css/styles.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

</head>
<body>
  <div class="card">
    <h1>Todo List</h1>

    <form class="add-form" action="/add" method="POST">
      <input type="text" name="task" placeholder="Enter a task..." required />
      <button type="submit">+</button>
    </form>

    <ul class="todo-list">
      <% todos.forEach((todo, index) => { %>
  <div class="task-item <%= todo.completed ? 'completed' : '' %>">
    
    <% if (todo.editing) { %>
      <form action="/update/<%= index %>" method="POST" class="edit-form">
        <input type="text" name="updatedTask" value="<%= todo.task %>" required />
        <button type="submit" title="Save"><i class="fas fa-save"></i></button>
      </form>
    <% } else { %>
      <form action="/toggle/<%= index %>" method="POST" class="toggle-form">
        <button type="submit" title="Toggle Done"><i class="fas fa-check"></i></button>
      </form>

      <span class="task-text"><%= todo.task %></span>

      <form action="/edit/<%= index %>" method="POST" class="edit-button-form">
        <button type="submit" title="Edit"><i class="fas fa-pen"></i></button>
      </form>
    <% } %>

    <form action="/delete/<%= index %>?_method=DELETE" method="POST" class="delete-form">
      <button type="submit" title="Delete"><i class="fas fa-trash"></i></button>
    </form>
  </div>
<% }); %>

    </ul>
  </div>
</body>
</html>
